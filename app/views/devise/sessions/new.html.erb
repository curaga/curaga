<h2 class="text-3xl text-center text-gray-200 m-4">Sign in</h2>

<div class="flex justify-center">
  <div class="w-full max-w-xs">
    <div class="text-gray-200 bg-gray-900 rounded p-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-field form-field--stacked">
          <%= f.label :email, class: 'form-field__label' %>
          <%= f.text_field :email, autofocus: true, autocomplete: 'username', class: 'form-field__input' %>
        </div>

        <div class="form-field form-field--stacked">
          <%= f.label :password, class: 'form-field__label' %>
          <%= f.password_field :password, autocomplete: 'current-password', class: 'form-field__input' %>
        </div>

        <div class="actions">
          <%= f.submit 'Sign in', class: 'btn btn--action w-full' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
