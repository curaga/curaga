<h1><%= @namespace.slug %></h1>

<%= form_with(model: @namespace, url: internal_namespace_settings_path(@namespace)) do |f| %>
  <div class="form-field form-field--stacked">
    <%= f.label :title, class: 'form-field__label' %>
    <%= f.text_field :title, class: 'form-field__input' %>
  </div>

  <div class="form-field form-field--inline">
    <%= f.label :default_doc_id, 'Default document', class: 'form-field__label' %>
    <%= f.select :default_doc_id, document_tree_options_array_for(@namespace, nil, include_blank: '<Random>'), {}, class: 'form-field__input' %>
  </div>

  <div>
    <%= f.button class: 'btn btn--action' %>
  </div>
<% end %>
